<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewWhite" >
        <item name="android:textSize">@dimen/textView_welcome</item>
        <item name="android:textColor">@color/TextColorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light" >
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewInfo" >
        <item name="android:textSize">@dimen/textView_info</item>
        <item name="android:textColor">@color/TextColorBlack</item>
    </style>

    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/editTextColorGrey</item>
        <item name="android:textSize">@dimen/edittext_textsize_addfood</item>
        <item name="android:textColorPrimary">@color/editTextColorGrey</item>
        <item name="colorAccent">@color/editTextColorGrey</item>
        <item name="colorControlNormal">@color/editTextColorGrey</item>
        <item name="colorControlActivated">@color/editTextColorGrey</item>
    </style>



</resources>
