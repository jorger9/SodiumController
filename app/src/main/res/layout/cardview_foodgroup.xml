<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/foodGroupCard"
    android:layout_width="@dimen/height_cardview_foodgroup"
    android:layout_height="@dimen/height_cardview_foodgroup"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/imageView_foodgroupcard"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center|top"
            android:src="@drawable/fruits"
            />
        <TextView
            android:id="@+id/textView_foodgroupcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frutas"
            android:textAlignment="center"
            />

    </LinearLayout>


</android.support.v7.widget.CardView>